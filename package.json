{
	"name": "node-proxy",
	"version": "0.0.1",
	"license": "MIT",
	"author": "hlxxzt",
	"private": true,
	"main": "dist/index.js",
	"bin": "dist/index.js",
	"engines": {
		"node": ">= 16.0.0"
	},
	"scripts": {
		"generate": "node scripts/generate.js",
		"dev-app": "cd packages/app && yarn start-ts",
		"dev-web": "cd packages/web && yarn dev",
		"dev": "run-s generate dev-app",
		"build-app": "cd packages/app && yarn build",
		"build-web": "cd packages/web && yarn build",
		"build-path": "node scripts/handlePath.js",
		"build-pkg": "pkg .",
		"build": "run-s build-app build-web build-path build-pkg"
	},
	"workspaces": [
		"packages/app",
		"packages/web"
	],
	"devDependencies": {
		"alasql": "1.7.3",
		"express": "4.17.2",
		"maxmind": "4.3.4",
		"optionator": "0.9.1",
		"lint-staged": "12.1.7",
		"prettier": "2.5.1",
		"pkg": "5.5.1",
		"npm-run-all": "4.1.5",
		"rimraf": "3.0.2"
	},
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.js": [
			"prettier --write"
		],
		"*.ts": [
			"prettier --parser=typescript --write"
		],
		"*.html": [
			"prettier --write"
		],
		"*.vue": [
			"prettier --parser=vue --write"
		]
	},
	"pkg": {
		"scripts": [
			"dist/client/**/*",
			"dist/common/**/*",
			"dist/server/**/*",
			"dist/index.js"
		],
		"assets": ["dist/dist/**/*"],
		"targets": [
			"node12-win-x64",
			"linux-x64",
			"linux-arm64",
			"macos-x64",
			"macos-arm64"
		],
		"outputPath": "build"
	}
}
